<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oluwatobig.app.MainActivity">

    <TextView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call For Justice?"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ll1"
        android:layout_below="@id/call">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_directions_run_black_24dp" />

                <TextView
                    android:id="@+id/text_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emergency"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:text="Make A Report"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/line_emergency"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_emergency"
                    android:background="#999"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/inor_text_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_emergency"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:text="Compose a crime report"
                    android:textAppearance="?android:textAppearanceSmall" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:layout_toRightOf="@id/cardview1"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/emergency1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_directions_run_black_24dp" />

                <TextView
                    android:id="@+id/text_emergency1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emergency1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:text="Call"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/line_emergency1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_emergency1"
                    android:background="#999"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/inor_text_emergency1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_emergency1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:text="Make A Quick Call"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ll2"
        android:layout_below="@id/ll1">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:layout_toRightOf="@id/cardview1"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/emergency4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_directions_run_black_24dp" />

                <TextView
                    android:id="@+id/text_emergency4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emergency4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="Know Your Right"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/line_emergency4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_emergency4"
                    android:background="#999"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/inor_text_emergency4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line_emergency4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="See what the law says about you."
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Emergency"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
